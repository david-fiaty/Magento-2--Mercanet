<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Configuration reader -->
    <virtualType name="NaxeroMercanetConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Naxero\Mercanet\Gateway\Config\Core::CODE</argument>
        </arguments>
    </virtualType>
    <type name="Naxero\Mercanet\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">NaxeroMercanetConfig</argument>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>

    <!-- Order state plugin -->
    <type name="Magento\Sales\Model\Order\Payment\State\CommandInterface">
        <plugin name="OrderStatePlugin" type="Naxero\Mercanet\Plugin\OrderStatePlugin" sortOrder="1" />
    </type>
</config>
